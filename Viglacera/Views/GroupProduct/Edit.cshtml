<script type="text/javascript">
    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });
    }

    $(function () {
        createEditor('vi', 'Content');
    });

</script>

<script type="text/javascript">
     $(function () {
         $("#SelectImages").click(function () {
             var finder = new CKFinder();
             finder.selectActionFunction = function (fileUrl) {
                 $("#Images").val(fileUrl);
             };
             finder.popup();
         });
         $("#SelectBackground").click(function () {
             var finder = new CKFinder();
             finder.selectActionFunction = function (fileUrl) {
                 $("#Background").val(fileUrl);
             };
             finder.popup();
         });
         $("#SelectiCon").click(function () {
             var finder = new CKFinder();
             finder.selectActionFunction = function (fileUrl) {
                 $("#iCon").val(fileUrl);
             };
             finder.popup();
         });
         $("#drMenu").change(function () {
             var idCate = $("#drMenu").val();
             $.ajax(
                    {
                        url: '/GroupProduct/AutoOrd',
                        type: 'post',
                        data: { "idCate": idCate },
                        dataType: 'json',
                        success: function (data) {

                            $('#Ord').val(data.result);
                        }
                    ,
                        error: function () { }
                    });

             //
         });

      });
</script>
<script type="text/javascript">
    $(document).ready(function () {
        var max_fields = 10; //maximum input boxes allowed
        var wrapper = $(".myinput"); //Fields wrapper
        var add_button = $(".btnAddNew"); //Add button ID

        var x = @Html.Raw(ViewBag.sttweb); //initlal text box count
        $(add_button).click(function (e) { //on add input button click
            e.preventDefault();
          
            if (x < max_fields) { //max input box allowed
                x++; //text box increment
                $(wrapper).append('<div>   <input placeholder="Link website, có http:// ở đầu" class="Name_ad" style="margin:5px 0px 7px 0px "  type="text" name="Website[' + x + ']" /> &nbsp; &nbsp;<a href="#" class="btnRemove">Xóa</a></div> '); //add input box
            }
        });

        $(wrapper).on("click", ".btnRemove", function (e) { //user click on remove text
            e.preventDefault(); $(this).parent('div').remove(); x--;
        })
    });
</script>
