
@model Viglacera.Models.tblConfig

@{
 
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}
    <div id="mainSale">
        <div class="uBanner">
            <img src="@Model.ImageSale" alt="@Model.TitleSale" />
        </div>
        <div class="uTime">
            <div class="lefts">
                <div class="leftsIfo">
                    Áp dụng từ ngày
                </div>
                <div class="triangle"></div>
                <div class="leftsDay">
                    @Model.StartDateSale.Day/@Model.StartDateSale.Month - @Model.EndDateSale.Day/ @Model.EndDateSale.Month/ @Model.EndDateSale.Year
                </div>
            </div>
            <div class="right">
                @if (DateTime.Now > Model.EndDateSale)
                {
                    <div class="countdown">
                        <span>Hết chương trình khuyến mại</span>

                    </div>
                }
                else
                {
                    <div class="countdown">

                        @{
                            DateTime startDate = DateTime.Parse(Model.EndDateSale.ToString());
                            DateTime endDate = DateTime.Now;
                            int daySale = (startDate - endDate).Days;
                            string lDaySale = "";
                            string rDaySale = "";
                            if (daySale.ToString().Length < 2)
                            {
                                lDaySale = "0";
                                rDaySale = daySale.ToString();
                            }
                            else
                            {
                                lDaySale = daySale.ToString().Substring(0, daySale.ToString().Length - 1);
                                rDaySale = daySale.ToString().Substring(daySale.ToString().Length - 1, daySale.ToString().Length - 1);
                            }
                        }
                        <div class="bloc-time days">
                            <span class="count-title">Ngày</span>

                            <div class="figure days days-1">
                                <span class="top">@lDaySale</span>
                                <span class="top-back">
                                    <span>@lDaySale</span>
                                </span>
                                <span class="bottom">@lDaySale</span>
                                <span class="bottom-back">
                                    <span>@lDaySale</span>
                                </span>
                            </div>

                            <div class="figure days days-2">
                                <span class="top">@rDaySale</span>
                                <span class="top-back">
                                    <span>@rDaySale</span>
                                </span>
                                <span class="bottom">@rDaySale</span>
                                <span class="bottom-back">
                                    <span>@rDaySale</span>
                                </span>
                            </div>
                        </div>

                        @{
                            string lHour = "";
                            string rHour = DateTime.Now.Hour.ToString().Substring(@DateTime.Now.Hour.ToString().Length - 1, @DateTime.Now.Hour.ToString().Length - 1);
                            int Hour = 24 - DateTime.Now.Hour;
                            if (Hour < 10)
                            {
                                lHour = "0";
                            }
                            else
                            {
                                lHour = DateTime.Now.Hour.ToString().Substring(0, @DateTime.Now.Hour.ToString().Length - 1);
                            }
                        }

                        <div class="bloc-time hours" data-init-value="@Hour ">
                            <span class="count-title">Giờ</span>
                            <div class="figure hours hours-1">
                                <span class="top">@lHour</span>
                                <span class="top-back">
                                    <span>@lHour</span>
                                </span>
                                <span class="bottom">@lHour</span>
                                <span class="bottom-back">
                                    <span>@lHour</span>
                                </span>
                            </div>

                            <div class="figure hours hours-2">
                                <span class="top">@rHour</span>
                                <span class="top-back">
                                    <span>@rHour</span>
                                </span>
                                <span class="bottom">@rHour</span>
                                <span class="bottom-back">
                                    <span>@rHour</span>
                                </span>
                            </div>
                        </div>
                        @{
                            string lMinute = "";
                            string rMinute = DateTime.Now.Minute.ToString().Substring(@DateTime.Now.Minute.ToString().Length - 1, @DateTime.Now.Minute.ToString().Length - 1);
                            int minute = 60 - DateTime.Now.Minute;
                            if (Hour < 10)
                            {
                                lMinute = "0";
                            }
                            else
                            {
                                lMinute = DateTime.Now.Minute.ToString().Substring(0, @DateTime.Now.Minute.ToString().Length - 1);
                            }
                        }
                        <div class="bloc-time min" data-init-value="@minute">
                            <span class="count-title">Phút</span>

                            <div class="figure min min-1">
                                <span class="top">@lMinute</span>
                                <span class="top-back">
                                    <span>@lMinute</span>
                                </span>
                                <span class="bottom">@lMinute</span>
                                <span class="bottom-back">
                                    <span>@lMinute</span>
                                </span>
                            </div>

                            <div class="figure min min-2">
                                <span class="top">@rMinute</span>
                                <span class="top-back">
                                    <span>@rMinute</span>
                                </span>
                                <span class="bottom">@rMinute</span>
                                <span class="bottom-back">
                                    <span>@rMinute</span>
                                </span>
                            </div>
                        </div>

                        <div class="bloc-time sec" data-init-value="0">
                            <span class="count-title">Giây</span>

                            <div class="figure sec sec-1">
                                <span class="top">0</span>
                                <span class="top-back">
                                    <span>0</span>
                                </span>
                                <span class="bottom">0</span>
                                <span class="bottom-back">
                                    <span>0</span>
                                </span>
                            </div>

                            <div class="figure sec sec-2">
                                <span class="top">0</span>
                                <span class="top-back">
                                    <span>0</span>
                                </span>
                                <span class="bottom">0</span>
                                <span class="bottom-back">
                                    <span>0</span>
                                </span>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
        <div class="highLights">
            <div class="header">
                <div class="contentHeader">
                    Sản phẩm khuyến mại nổi bật
                </div>
            </div>
            <div class="contentHighLights">
                @Html.Raw(ViewBag.resultPriority)

            </div>
        </div>
        @if (ViewBag.CheckSyn != "" && ViewBag.CheckSyn != null)
        {
            <div class="combo">
                <div class="header">
                    <div class="contentHeader">
                        Sản phẩm khuyến mại theo gói
                    </div>
                </div>
                <div class="contentCombo">
                    @Html.Raw(ViewBag.resultSyn)


                </div>
            </div>
        }

        <div class="saleEx">
            <div class="header">
                <div class="contentHeader">
                    Sản phẩm khuyến mại khác
                </div>
            </div>
            <div class="contentsaleEx">

                @Html.Raw(ViewBag.resultSale)
            </div>
        </div>
    </div>

<div class="Clear"></div>
