                });

            //
        });
        $("#ddlPage").change(function () {
            //your code

            var pageSizes = $("#ddlPage").val();
            $.post("/Criteria/UpdateCriteria", { "pageSizes": pageSizes },
                function (data) {
                    $('#ajaxnhan').html(data);
