@model Caesar.Models.tblProductSyn

<script type="text/javascript">

    $(document).ready(function () {

        $("#btnOrder").click(function () {
            link = $(this).attr('rel');
            var id = $(this).attr('title');
            var Ord = $("#txtOrd").val();

            $.ajax({

                url: '/Order/OrderAdd',
                type: 'post',
                dataType: 'json',
                data: { "id": id, "Ord": Ord },
                success: function (data) {
                    $(".CountOf").empty();
                    $(".CountOf").append(data.sl);
                }
                ,
                error: function () { }
            });

        });



    });

</script>

